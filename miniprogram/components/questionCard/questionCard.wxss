/* components/questionCard/questionCard.wxss */
@import '/app.wxss';

.user {
  display: flex;
  padding: 20rpx 20rpx 0;
  align-items: center;
}

.user .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user .info view {
  font-size: 24rpx;
  color: #999;
}

.user .info .nick {
  color: #555;
  font-size: 28rpx;
}

.question .desc {
  font-size: 28rpx;
  color: #444;
  padding: 10rpx 20rpx 0;
}

.question .files {
  display: flex;
  flex-wrap: wrap;
}

.question .files image {
  margin: 10rpx 25rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.button {
  display: flex;
  border-bottom: 16rpx #eee solid;
}

.button button {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
  background-color: white;
  font-weight: normal;
}