/* custom-tab-bar/index.wxss */
.tab-bar {
  height: 96rpx;
  background-color: white;
  border-top: .5px solid rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
  display: flex;
}

.tab-bar .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.tab-bar .tab-item cover-image {
  width: 54rpx;
  height: 54rpx;
}