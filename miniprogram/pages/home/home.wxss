/* miniprogram/pages/index/index.wxss */
.container {
  padding: 0 20rpx;
}

.container .title {
  text-align: center;
  color: #fc8b2e;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.container .live {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
}

.container .lists {
  display: flex;
}

.container .lists .item {
  flex: 1;
  margin: 6rpx;
  padding: 8rpx 0;
  border-radius: 12rpx;
  color: white;
  font-size: 26rpx;
  text-align: center;
  background-color: #fc8b2ed5;
}

.container .lists .item .desc {
  font-size: 26rpx;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.container .swipe {
  position: relative;
  border-radius: 12rpx;
}

.container .swipe image {
  height: 300rpx;
}

.container .swipe text {
  position: absolute;
  font-size: 24rpx;
  line-height: 60rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  text-align: center;
  bottom: 0;
  left: 0;
  width: 100%;
}

.container .comment {
  display: flex;
  margin-top: 12rpx;
  font-size: 26rpx;
  line-height: 28rpx;
}

.container .comment .tip {
  padding: 10rpx;
  background-color: #fc8b2ed5;
  color: white;
  border-radius: 12rpx;
  height: 100%;
}

.container .comment .hot {
  padding: 10rpx;
  flex: 1;
  height: 56rpx;
}

.container .comment .hot .textflow {
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  color: #606060;
}

.container .about {
  width: 100%;
  height: 400rpx;
}

.container .end {
  text-align: center;
  color: #999;
  font-size: 20rpx;
  line-height: 50rpx;
}

.contact {
  width: 90rpx !important;
  height: 90rpx !important;
  padding: 0;
  position: fixed;
  right: 16rpx;
  bottom: 16rpx;
  border-radius: 50%;
}

.contact image {
  width: 100%;
  height: 100%;
}