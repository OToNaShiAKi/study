/* miniprogram/pages/publish/publish.wxss */
.question {
  padding: 0 20rpx;
  font-size: 28rpx;
}

.question .width {
  width: 100%;
  margin-top: 16rpx;
  padding: 10rpx;
}

.location {
  margin: 20rpx;
  font-size: 36rpx;
  padding: 12rpx;
  border-bottom: 1px solid #fc8b2e;
  border-top: 1px solid #fc8b2e;
  display: flex;
  align-items: center;
}

.location i {
  font-size: 36rpx;
  flex: 1;
  text-align: right;
}

.location text {
  font-size: 26rpx;
  margin-left: 10rpx;
}

.lists {
  display: flex;
  flex-wrap: wrap;
}

.lists .pick {
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
  border-radius: 12rpx;
  position: relative;
  margin: 10rpx 25rpx;
}

.lists .pick button {
  position: absolute;
  left: 100%;
  top: -10rpx;
  width: 40rpx !important;
  height: 40rpx !important;
  padding: 0;
  line-height: 40rpx;
  font-size: 24rpx;
  transform: translateX(-50%);
  background-color: #666;
  color:white;
  border-radius: 50%; 
}

.lists .pick i {
  font-size: 80rpx;
  color: #999;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.lists .pick image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

button.submit {
  margin: 20rpx auto;
  border-color: #fc8b2e;
  color: #fc8b2e;
  display: block ;
  font-weight: normal;
  width: 200rpx;
  font-size: 28rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
  padding: 0 20rpx;
}