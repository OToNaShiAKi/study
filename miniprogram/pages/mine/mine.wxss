/* miniprogram/pages/mine/mine.wxss */
.user {
  background-color: #fc8a2e;
  padding: 50rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  margin-bottom: 90rpx;
}

.user .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 auto 20rpx;
}

.user .nick {
  color: white;
  font-size: 30rpx;
  text-align: center;
}

.lists view {
  font-size: 28rpx;
  color: white;
  padding: 20rpx 30rpx;
  margin: 30rpx;
  background-color: #fc8b2ed5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.lists view i {
  flex: 1;
  text-align: right;
}

.lists view::before {
  font-size: 40rpx;
}