/* miniprogram/pages/index/index.wxss */
.container {
  padding: 0 20rpx;
}

.container .title {
  text-align: center;
  color: #fc8b2e;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.container .swipe image {
  width: 100%;
  height: 360rpx;
  border-radius: 12rpx;
}

.container .lists {
  display: flex;
}

.container .lists .item {
  flex: 1;
  margin: 6rpx;
  padding: 8rpx 0;
  border-radius: 12rpx;
  color: white;
  font-size: 28rpx;
  text-align: center;
  background-color: #fc8a2e;
}

.container .lists .item .desc {
  font-size: 30rpx;
  margin-bottom: 6rpx;
  font-weight: bold;
}
